<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newsItemViewModel"
            type="com.ygl_consulting.myfluxrss.viewmodels.ItemNewsViewModel" />
    </data>


    <RelativeLayout
        android:id="@+id/item_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{newsItemViewModel::onItemClick}">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            tools:imageUrl="@{newsItemViewModel.picture}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_news"
            android:background="#7c000000"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{newsItemViewModel.title}"
                android:textColor="#c4c4c4"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="article 1" />

            <TextView
                android:id="@+id/label_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{newsItemViewModel.date}"
                android:textColor="#8b8b8b"
                android:textSize="14sp"
                tools:text="date article" />

        </LinearLayout>
    </RelativeLayout>
</layout>